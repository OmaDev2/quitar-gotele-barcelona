---
import { ChevronRight, ArrowRight } from "lucide-react";
import DynamicIcon from "../../DynamicIcon.astro";
const {
    servicesSection,
    featuredServices = [],
    customServices = null,
    allServices = [],
    city,
    bgClass = "bg-secondary",
} = Astro.props;

const servicesToDisplay = customServices || featuredServices;
---

<section id="servicios" class={`py-20 ${bgClass} border-b border-heading/10`}>
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <div class="flex items-center justify-center gap-4 mb-4">
                <div class="h-px w-12 bg-primary"></div>
                <span
                    class="text-primary font-bold uppercase tracking-widest text-sm"
                    >Nuestros Servicios</span
                >
                <div class="h-px w-12 bg-primary"></div>
            </div>
            <h2
                class="text-4xl lg:text-5xl font-heading font-bold text-heading mb-6"
            >
                {
                    servicesSection?.title ? (
                        <>
                            {servicesSection.title}
                            {servicesSection.titleHighlight && (
                                <>
                                    <br />
                                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent">
                                        {servicesSection.titleHighlight}
                                    </span>
                                </>
                            )}
                        </>
                    ) : (
                        `⚠️ Configura el Título en CMS (Home > Servicios)`
                    )
                }
            </h2>
            <p class="text-body max-w-2xl mx-auto text-lg">
                {
                    servicesSection?.subtitle ||
                        "⚠️ Configura el Subtítulo en CMS (Home > Servicios)"
                }
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                servicesToDisplay.map((item: any) => {
                    let data, slug, link;

                    // 1. Caso Híbrido: Discriminant (Keystatic Conditional)
                    if (item.discriminant) {
                        if (item.discriminant === "manual") {
                            data = item.value;
                            slug = data.title
                                ?.toLowerCase()
                                .replace(/\s+/g, "-");
                            link = data.link || `/servicios/${slug}/`;
                        } else if (item.discriminant === "auto") {
                            const serviceSlug = item.value.service;
                            const foundService = allServices.find(
                                (s: any) => s.slug === serviceSlug,
                            );

                            if (foundService) {
                                data = {
                                    ...foundService.data,
                                    title:
                                        item.value.overrideTitle ||
                                        foundService.data.title,
                                    price:
                                        item.value.overridePrice ||
                                        foundService.data.price,
                                    isPopular: item.value.isPopular || false,
                                };
                                slug = foundService.slug;
                                link = `/${slug}`;
                            } else {
                                // Fallback si no se encuentra el servicio (aunque no debería pasar)
                                data = {
                                    title: "Servicio no encontrado",
                                    description: "Revisar configuración en CMS",
                                    icon: "AlertCircle",
                                };
                                slug = "#";
                                link = "#";
                            }
                        }
                    }
                    // 2. Caso Colección Directa (Featured Services o Fallback antiguo)
                    else if (item.data) {
                        data = item.data;
                        slug = item.slug;
                        link = `/${slug}`;
                    }
                    // 3. Caso Manual Antiguo (si hubiera datos legacy sin discriminant)
                    else {
                        data = item;
                        slug =
                            item.slug ||
                            item.name?.toLowerCase().replace(/\s+/g, "-");
                        link = item.link || `/servicios/${slug}/`;
                    }

                    const title = data.title || data.name;
                    const description = data.shortDesc || data.description;
                    const image =
                        data.heroImage ||
                        data.image ||
                        `/images/services/${slug}-1.png`;

                    return (
                        <a
                            href={link}
                            class="group relative overflow-hidden rounded-lg border border-heading/10 hover:border-primary/50 transition-all hover:shadow-xl hover:shadow-primary/20 h-[400px]"
                        >
                            <div
                                class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
                                style={`background-image: url('${image}')`}
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-secondary/90 via-secondary/50 to-transparent" />
                            <div class="relative h-full flex flex-col justify-end p-8">
                                <div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                                    <DynamicIcon
                                        name={
                                            data.icon ||
                                            data.icon_suggestion ||
                                            "CheckCircle"
                                        }
                                        className="w-6 h-6"
                                    />
                                </div>
                                <h3 class="text-2xl font-heading font-bold text-heading mb-3">
                                    {title}
                                </h3>
                                <p class="text-body mb-6 line-clamp-2 text-sm">
                                    {description}
                                </p>
                                <div class="inline-flex items-center text-primary font-bold group-hover:text-accent">
                                    Leer más{" "}
                                    <ChevronRight className="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" />
                                </div>
                            </div>
                        </a>
                    );
                })
            }
        </div>
    </div>
</section>
