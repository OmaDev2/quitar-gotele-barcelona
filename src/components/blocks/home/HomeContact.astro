---
import { Phone, MapPin, MessageCircle } from "lucide-react";
import HeroContactForm from "../../HeroContactForm.astro";
import { generateTelUrl, generateWhatsAppUrl } from "@/utils/contact";

const { config, bgClass = "bg-secondary", contactSection } = Astro.props;

// Determine inner container background based on section background
const containerBgClass =
    bgClass === "bg-secondary" ? "bg-surface" : "bg-secondary";
---

<section id="presupuesto" class={`py-20 ${bgClass} relative overflow-hidden`}>
    <div
        class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-10"
    >
    </div>
    <div class="container mx-auto px-4 relative z-10">
        <div
            class={`max-w-4xl mx-auto ${containerBgClass} rounded-2xl border border-heading/10 shadow-2xl overflow-hidden flex flex-col md:flex-row`}
        >
            <div class="p-8 md:p-12 md:w-1/2 flex flex-col justify-center">
                <h2 class="text-3xl font-heading font-bold text-heading mb-4">
                    {contactSection?.title || "¿Necesitas un Presupuesto?"}
                </h2>
                <p class="text-body mb-8">
                    {
                        contactSection?.subtitle ||
                            "Cuéntanos tu proyecto. Te respondemos con una valoración gratuita y sin compromiso."
                    }
                </p>
                <div class="space-y-8">
                    <div class="flex items-start group">
                        <div
                            class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary mr-6 group-hover:bg-primary group-hover:text-white transition-all duration-300 shadow-sm"
                        >
                            <Phone className="w-6 h-6" />
                        </div>
                        <div>
                            <div
                                class="text-sm text-body/60 uppercase tracking-wider font-bold mb-1"
                            >
                                Presupuesto Gratis.
                            </div>
                            <a
                                href={generateTelUrl(config.phone)}
                                class="text-2xl font-heading font-bold text-heading hover:text-primary transition-colors"
                            >
                                {config.phone || "Teléfono no disponible"}
                            </a>
                        </div>
                    </div>

                    {
                        config.whatsapp && (
                            <div class="flex items-start group">
                                <div class="w-12 h-12 rounded-xl bg-brand-whatsapp/10 flex items-center justify-center text-brand-whatsapp mr-6 group-hover:bg-brand-whatsapp group-hover:text-white transition-all duration-300 shadow-sm">
                                    <MessageCircle className="w-6 h-6" />
                                </div>
                                <div>
                                    <div class="text-sm text-body/60 uppercase tracking-wider font-bold mb-1">
                                        WhatsApp
                                    </div>
                                    <a
                                        href={generateWhatsAppUrl(
                                            config.whatsapp,
                                        )}
                                        target="_blank"
                                        class="text-2xl font-heading font-bold text-heading hover:text-brand-whatsapp transition-colors"
                                    >
                                        {config.whatsapp}
                                    </a>
                                </div>
                            </div>
                        )
                    }

                    <div class="flex items-start group">
                        <div
                            class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary mr-6 group-hover:bg-primary group-hover:text-white transition-all duration-300 shadow-sm"
                        >
                            <MapPin className="w-6 h-6" />
                        </div>
                        <div>
                            <div
                                class="text-sm text-body/60 uppercase tracking-wider font-bold mb-1"
                            >
                                Trabajamos en
                            </div>
                            <div
                                class="text-xl font-heading font-bold text-heading"
                            >
                                {config.city}
                                <span class="text-body font-normal text-base"
                                    >y alrededores</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div
                class="p-8 md:p-12 md:w-1/2 bg-surface/50 border-l border-heading/10"
            >
                <HeroContactForm
                    title="Solicitar Valoración"
                    subtitle="Rellena el formulario y te contactamos."
                />
            </div>
        </div>
    </div>
</section>
