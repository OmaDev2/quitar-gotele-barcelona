---
import { Star } from "lucide-react";

interface Props {
    testimonials: any[];
    title?: string;
    subtitle?: string;
    bgClass?: string;
}

const { testimonials, title, subtitle, bgClass = "bg-surface" } = Astro.props;

// Determine card background based on section background
const cardBgClass = bgClass === "bg-secondary" ? "bg-surface" : "bg-secondary";
---

{
    testimonials && testimonials.length > 0 && (
        <section id="testimonials" class={`py-24 ${bgClass} overflow-hidden`}>
            <div class="container mx-auto px-4 relative">
                {/* Section Header */}
                <div class="max-w-3xl mx-auto text-center mb-20">
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-bold mb-6">
                        <Star className="w-4 h-4 fill-primary" />
                        <span>Testimonios Reales</span>
                    </div>

                    <h2 class="text-4xl md:text-5xl font-heading font-bold text-heading mb-6 tracking-tight">
                        {title || "Lo que dicen nuestros clientes"}
                    </h2>

                    <p class="text-body text-lg leading-relaxed">
                        {subtitle ||
                            "La satisfacción de nuestros clientes es nuestra mejor garantía en cada proyecto de alisado."}
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                    {testimonials.map((testimonial) => (
                        <div
                            class={`${cardBgClass} p-8 rounded-2xl border border-heading/10 shadow-lg relative hover:-translate-y-1 transition-transform duration-300`}
                        >
                            <div class="flex items-center mb-6">
                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center text-white font-bold text-xl mr-4 shadow-md">
                                    {testimonial.initials ||
                                        testimonial.name.charAt(0)}
                                </div>
                                <div>
                                    <div class="font-bold text-heading">
                                        {testimonial.name}
                                    </div>
                                    <div class="flex text-yellow-400 text-xs mt-1">
                                        {Array.from({ length: 5 }).map(
                                            (_, i) => (
                                                <Star
                                                    className={`w-4 h-4 ${i < (testimonial.rating || 5) ? "fill-current" : "text-gray-600"}`}
                                                />
                                            ),
                                        )}
                                    </div>
                                </div>
                            </div>
                            <p class="text-body italic relative z-10 leading-relaxed">
                                "{testimonial.text}"
                            </p>
                        </div>
                    ))}
                </div>
            </div>
        </section>
    )
}
