---
import Layout from "../layouts/Layout.astro";
import { CheckCircle, ArrowRight } from "lucide-react";
import { getEntry } from "astro:content";

// Fetch Global Settings
const business = await getEntry("business", "global");
const { siteName } = business?.data || {
    siteName: "Herrero Zaragoza",
};
---

<Layout title={`¡Mensaje Enviado! | ${siteName}`} noindex={true}>
    <section
        class="min-h-[80vh] flex items-center justify-center bg-secondary px-4"
    >
        <div class="max-w-md w-full text-center">
            <div
                class="inline-flex items-center justify-center w-20 h-20 bg-green-500/20 rounded-full mb-8"
            >
                <CheckCircle className="w-10 h-10 text-green-500" />
            </div>

            <h1 class="text-4xl font-heading font-bold text-white mb-4">
                ¡Mensaje Recibido!
            </h1>

            <p class="text-slate-300 text-lg mb-8 leading-relaxed">
                [cite_start]Gracias por contactar con nosotros[cite: 579]. Hemos
                recibido tu solicitud correctamente. Nos pondremos en contacto
                contigo en menos de 24 [cite_start]horas[cite: 580].
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/"
                    class="inline-flex items-center justify-center px-6 py-3 bg-slate-800 hover:bg-slate-700 text-white font-bold rounded transition-colors border border-transparent hover:border-primary/50"
                >
                    Volver al Inicio
                </a>

                <a
                    href="/servicios"
                    class="inline-flex items-center justify-center px-6 py-3 bg-primary hover:bg-accent text-white font-bold rounded transition-colors shadow-lg hover:shadow-primary/20"
                >
                    Ver Servicios
                    <ArrowRight className="w-4 h-4 ml-2" />
                </a>
            </div>
        </div>
    </section>
</Layout>
