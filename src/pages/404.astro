---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import { Home, Phone, ArrowRight } from "lucide-react";
import { getEntry, getCollection } from "astro:content";

// Fetch Global Settings
const business = await getEntry("business", "global");
const { siteName, phone, niche } = business?.data || {
    siteName: "Nombre Negocio",
    phone: "600 000 000",
    niche: "Servicio",
};

// Recuperamos servicios reales para sugerir (evita enlaces rotos)
const services = await getCollection("services");
const suggestedServices = services.slice(0, 4); // Mostramos los 4 primeros
---

<Layout
    title={`Página No Encontrada | ${siteName}`}
    description="La página que buscas no existe"
    noindex={true}
>
    <section
        class="min-h-screen flex items-center justify-center bg-secondary py-20"
    >
        <div class="container mx-auto px-4">
            <div class="max-w-2xl mx-auto text-center">
                <div class="mb-8">
                    <h1
                        class="text-[150px] lg:text-[200px] font-heading font-bold text-primary leading-none opacity-20 select-none"
                    >
                        404
                    </h1>
                </div>

                <div class="mb-12 -mt-20 relative z-10">
                    <h2
                        class="text-4xl lg:text-5xl font-heading font-bold text-heading mb-4"
                    >
                        Página No Encontrada
                    </h2>
                    <p
                        class="text-xl text-body leading-relaxed max-w-lg mx-auto"
                    >
                        Lo sentimos, la página que buscas no existe, ha sido
                        movida o la dirección es incorrecta.
                    </p>
                </div>

                <div
                    class="flex flex-col sm:flex-row gap-4 justify-center mb-16 relative z-10"
                >
                    <a
                        href="/"
                        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold bg-primary hover:bg-accent text-white rounded-lg transition-all shadow-lg hover:shadow-primary/40 transform hover:-translate-y-0.5"
                    >
                        <Home className="w-5 h-5 mr-2" />
                        Volver al Inicio
                    </a>

                    <a
                        href={`tel:${(phone || "").replace(/\s/g, "")}`}
                        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-heading border-2 border-primary hover:bg-primary hover:text-white rounded-lg transition-all transform hover:-translate-y-0.5"
                    >
                        <Phone className="w-5 h-5 mr-2" />
                        Llamar Ahora
                    </a>
                </div>

                {
                    suggestedServices.length > 0 && (
                        <div class="bg-surface/50 border border-heading/10 rounded-xl p-8 backdrop-blur-sm">
                            <h3 class="text-xl font-bold text-heading mb-6">
                                ¿Buscabas alguno de nuestros servicios de{" "}
                                {niche}?
                            </h3>
                            <div class="grid sm:grid-cols-2 gap-4">
                                {suggestedServices.map((service) => (
                                    <a
                                        href={`/${service.slug}`}
                                        class="flex items-center justify-between p-4 bg-surface border border-heading/5 rounded-lg hover:border-primary/50 transition-colors group text-left"
                                    >
                                        <span class="text-body group-hover:text-primary transition-colors font-medium">
                                            {service.data.title}
                                        </span>
                                        <ArrowRight className="w-5 h-5 text-primary group-hover:translate-x-1 transition-transform" />
                                    </a>
                                ))}

                                <a
                                    href="/contacto/"
                                    class="flex items-center justify-between p-4 bg-surface border border-heading/5 rounded-lg hover:border-primary/50 transition-colors group text-left"
                                >
                                    <span class="text-body group-hover:text-primary transition-colors font-medium">
                                        Contactar con Soporte
                                    </span>
                                    <ArrowRight className="w-5 h-5 text-primary group-hover:translate-x-1 transition-transform" />
                                </a>
                            </div>
                        </div>
                    )
                }
            </div>
        </div>
    </section>

    <Footer />
</Layout>
