---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import FinalCTA from "../components/FinalCTA.astro";
import { getCollection, getEntry } from "astro:content";
import {
    MapPin,
    ArrowRight,
    Home,
    Building2,
    Factory,
    Search,
    CheckCircle2,
    Phone,
    MessageCircle,
    Calendar,
} from "lucide-react";
import type { WithContext, CollectionPage } from "schema-dts";

const locations = await getCollection("locations");

// Fetch Global Settings (Dinámico)
import { getSettings } from "@/lib/settings";
const settings = await getSettings();
const { siteName, city, niche, phone, whatsapp } = settings;

// Agrupar por tipo
const residenciales = locations.filter(
    (loc) => loc.data.type === "residencial",
);
const industriales = locations.filter((loc) => loc.data.type === "industrial");
const centros = locations.filter((loc) => loc.data.type === "centro");

const schema: WithContext<CollectionPage> = {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    name: `Áreas de Servicio - ${siteName}`,
    description: `Ofrecemos servicios de ${niche} en ${city} y todas las áreas circundantes. Consulta nuestras zonas de cobertura garantizada.`,
};
---

<Layout
    title={`Zonas de Servicio y Cobertura | ${siteName}`}
    description={`¿Buscas ${niche} en ${city}? Cubrimos toda la ciudad y provincia. Encuentra tu zona, barrio o código postal aquí. Respuesta rápida garantizada.`}
    schema={schema}
>
    {/* --- HERO SECTION REFINADA --- */}
    <section
        class="relative min-h-[60vh] flex items-center justify-center overflow-hidden bg-secondary"
    >
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-gradient-to-b from-secondary/40 via-secondary/90 to-secondary z-10"
            >
            </div>
            <img
                src="https://images.unsplash.com/photo-1480714378408-67cf0d13bc1b?q=80&w=2070&auto=format&fit=crop"
                alt={`Mapa de cobertura de ${siteName} en ${city}`}
                class="w-full h-full object-cover opacity-20 mix-blend-overlay grayscale contrast-125"
                width="1920"
                height="1080"
            />
            {/* Grid Pattern Overlay */}
            <div
                class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 mix-blend-soft-light"
            >
            </div>
        </div>

        <div class="container mx-auto px-4 relative z-20 text-center max-w-4xl">
            <div
                class="inline-flex items-center gap-2 px-6 py-2.5 rounded-full bg-white/5 backdrop-blur-md border border-white/10 mb-8 animate-fade-in-up hover:bg-white/10 transition-colors"
            >
                <div class="w-2 h-2 rounded-full bg-primary animate-pulse">
                </div>
                <span
                    class="text-xs font-bold tracking-[0.25em] text-white/90 uppercase"
                    >Cobertura Activa en {city}</span
                >
            </div>

            <h1
                class="text-5xl md:text-7xl lg:text-8xl font-black text-heading mb-8 tracking-tighter leading-none uppercase animate-fade-in-up delay-100"
            >
                Llegamos <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-white to-primary"
                >
                    Donde Estés
                </span>
            </h1>

            <p
                class="text-lg md:text-2xl text-text/80 max-w-2xl mx-auto leading-relaxed animate-fade-in-up delay-200 mb-10 text-balance"
            >
                Nuestra red de técnicos expertos en <span
                    class="text-heading font-medium">{niche}</span
                > cubre estratégicamente todo <span
                    class="text-heading font-medium">{city}</span
                > para garantizar tiempos de respuesta récord.
            </p>

            <div
                class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up delay-300"
            >
                <a
                    href="#zonas-list"
                    class="px-8 py-4 bg-primary text-black font-bold rounded-lg hover:bg-primary/90 transition-all flex items-center gap-2 group shadow-lg shadow-primary/20"
                >
                    <Search
                        className="w-5 h-5 group-hover:scale-110 transition-transform"
                    />
                    Buscar mi Zona
                </a>
                <a
                    href={`tel:${phone.replace(/\s/g, "")}`}
                    class="px-8 py-4 bg-white/5 text-heading font-bold rounded-lg hover:bg-white/10 transition-all border border-white/10 flex items-center gap-2 group"
                >
                    <Phone
                        className="w-5 h-5 group-hover:scale-110 transition-transform"
                    />
                    Llamar ahora
                </a>
            </div>
        </div>
    </section>

    {/* --- ZONAS LIST --- */}
    <section
        id="zonas-list"
        class="py-24 bg-secondary relative overflow-hidden"
    >
        {/* Decorative background blurs */}
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/20 rounded-full blur-[120px] pointer-events-none -translate-y-1/2 translate-x-1/2"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-primary/10 rounded-full blur-[120px] pointer-events-none translate-y-1/2 -translate-x-1/2"
        >
        </div>

        <div class="container mx-auto px-4 relative z-10 space-y-32">
            {/* Zonas Residenciales */}
            {
                residenciales.length > 0 && (
                    <div class="group/section">
                        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-16 border-b border-white/5 pb-8">
                            <div>
                                <div class="flex items-center gap-3 mb-4 text-primary">
                                    <span class="p-2 rounded-lg bg-primary/10 border border-primary/20">
                                        <Home className="w-5 h-5" />
                                    </span>
                                    <span class="text-sm font-bold tracking-[0.2em] uppercase text-text/70">
                                        Áreas del Hogar
                                    </span>
                                </div>
                                <h2 class="text-4xl md:text-5xl font-bold text-heading tracking-tight">
                                    Zonas Residenciales
                                </h2>
                            </div>
                            <p class="text-text/70 text-base md:text-lg max-w-xl leading-relaxed lg:text-right text-pretty">
                                Despliegue rápido en barrios residenciales y
                                comunidades de vecinos. Minimizamos las
                                molestias y garantizamos discreción.
                            </p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {residenciales.map((location) => (
                                <a
                                    href={`/zona/${location.slug}/`}
                                    class="group relative flex flex-col justify-between overflow-hidden rounded-2xl bg-white/5 border border-white/10 p-8 transition-all duration-300 hover:bg-white/10 hover:border-primary/50 hover:shadow-2xl hover:shadow-primary/10 hover:-translate-y-1"
                                >
                                    <div>
                                        <div class="flex justify-between items-start mb-6">
                                            <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center border border-white/10 group-hover:bg-primary/20 group-hover:border-primary/30 transition-colors">
                                                <MapPin className="w-5 h-5 text-text/50 group-hover:text-primary transition-colors" />
                                            </div>
                                            <ArrowRight className="w-6 h-6 text-text/50 group-hover:text-primary transform -translate-x-2 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300" />
                                        </div>
                                        <h3 class="text-2xl font-bold text-heading mb-2 group-hover:text-primary transition-colors">
                                            {location.data.name}
                                        </h3>
                                        <p class="text-text/60 text-sm line-clamp-2 mb-6">
                                            {location.data.seoDesc ||
                                                `Servicio urgente en ${location.data.name}.`}
                                        </p>
                                    </div>
                                    <div class="border-t border-white/5 pt-4">
                                        <div class="flex items-center gap-2 text-xs text-text/50">
                                            <CheckCircle2 className="w-3.5 h-3.5 text-primary" />
                                            <span>Servicio activo hoy</span>
                                        </div>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                )
            }

            {/* Zonas Industriales */}
            {
                industriales.length > 0 && (
                    <div class="group/section">
                        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-16 border-b border-white/5 pb-8">
                            <div>
                                <div class="flex items-center gap-3 mb-4 text-primary">
                                    <span class="p-2 rounded-lg bg-primary/10 border border-primary/20">
                                        <Factory className="w-5 h-5" />
                                    </span>
                                    <span class="text-sm font-bold tracking-[0.2em] uppercase text-text/70">
                                        Polígonos y Naves
                                    </span>
                                </div>
                                <h2 class="text-4xl md:text-5xl font-bold text-heading tracking-tight">
                                    Zonas Industriales
                                </h2>
                            </div>
                            <p class="text-text/70 text-base md:text-lg max-w-xl leading-relaxed lg:text-right text-pretty">
                                Equipos preparados para intervenciones en
                                grandes instalaciones, con protocolos de
                                seguridad industrial y maquinaria especializada.
                            </p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {industriales.map((location) => (
                                <a
                                    href={`/zona/${location.slug}/`}
                                    class="group relative flex flex-col justify-between overflow-hidden rounded-2xl bg-white/5 border border-white/10 p-8 transition-all duration-300 hover:bg-white/10 hover:border-primary/50 hover:shadow-2xl hover:shadow-primary/10 hover:-translate-y-1"
                                >
                                    <div>
                                        <div class="flex justify-between items-start mb-6">
                                            <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center border border-white/10 group-hover:bg-primary/20 group-hover:border-primary/30 transition-colors">
                                                <Factory className="w-5 h-5 text-text/50 group-hover:text-primary transition-colors" />
                                            </div>
                                            <ArrowRight className="w-6 h-6 text-text/50 group-hover:text-primary transform -translate-x-2 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300" />
                                        </div>
                                        <h3 class="text-2xl font-bold text-heading mb-2 group-hover:text-primary transition-colors">
                                            {location.data.name}
                                        </h3>
                                        <p class="text-text/60 text-sm line-clamp-2 mb-6">
                                            {location.data.seoDesc ||
                                                `Soluciones industriales en ${location.data.name}.`}
                                        </p>
                                    </div>
                                    <div class="border-t border-white/5 pt-4">
                                        <div class="flex items-center gap-2 text-xs text-text/50">
                                            <CheckCircle2 className="w-3.5 h-3.5 text-primary" />
                                            <span>Atención Business 24/7</span>
                                        </div>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                )
            }

            {/* Centros Urbanos */}
            {
                centros.length > 0 && (
                    <div class="group/section">
                        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-16 border-b border-white/5 pb-8">
                            <div>
                                <div class="flex items-center gap-3 mb-4 text-primary">
                                    <span class="p-2 rounded-lg bg-primary/10 border border-primary/20">
                                        <Building2 className="w-5 h-5" />
                                    </span>
                                    <span class="text-sm font-bold tracking-[0.2em] uppercase text-text/70">
                                        Casco Urbano
                                    </span>
                                </div>
                                <h2 class="text-4xl md:text-5xl font-bold text-heading tracking-tight">
                                    Centro y Distritos
                                </h2>
                            </div>
                            <p class="text-text/70 text-base md:text-lg max-w-xl leading-relaxed lg:text-right text-pretty">
                                Logística adaptada al centro de la ciudad.
                                Vehículos compactos para acceso a zonas
                                peatonales y cascos antiguos.
                            </p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {centros.map((location) => (
                                <a
                                    href={`/zona/${location.slug}/`}
                                    class="group relative flex flex-col justify-between overflow-hidden rounded-2xl bg-white/5 border border-white/10 p-8 transition-all duration-300 hover:bg-white/10 hover:border-primary/50 hover:shadow-2xl hover:shadow-primary/10 hover:-translate-y-1"
                                >
                                    <div>
                                        <div class="flex justify-between items-start mb-6">
                                            <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center border border-white/10 group-hover:bg-primary/20 group-hover:border-primary/30 transition-colors">
                                                <Building2 className="w-5 h-5 text-text/50 group-hover:text-primary transition-colors" />
                                            </div>
                                            <ArrowRight className="w-6 h-6 text-text/50 group-hover:text-primary transform -translate-x-2 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300" />
                                        </div>
                                        <h3 class="text-2xl font-bold text-heading mb-2 group-hover:text-primary transition-colors">
                                            {location.data.name}
                                        </h3>
                                        <p class="text-text/60 text-sm line-clamp-2 mb-6">
                                            {location.data.seoDesc ||
                                                `Servicio rápido en ${location.data.name}.`}
                                        </p>
                                    </div>
                                    <div class="border-t border-white/5 pt-4">
                                        <div class="flex items-center gap-2 text-xs text-text/50">
                                            <CheckCircle2 className="w-3.5 h-3.5 text-primary" />
                                            <span>Acceso Zona SER/APR</span>
                                        </div>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                )
            }

            {/* Empty State / CTA Final Premium */}
            <div
                class="relative overflow-hidden rounded-3xl bg-surface/50 border border-white/10 p-12 lg:p-24 text-center"
            >
                <div
                    class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] pointer-events-none"
                >
                </div>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-secondary via-transparent to-secondary pointer-events-none"
                >
                </div>

                <div class="relative z-10 max-w-3xl mx-auto">
                    <div
                        class="w-16 h-16 bg-white/5 rounded-2xl flex items-center justify-center mx-auto mb-8 border border-white/10 shadow-xl shadow-black/50"
                    >
                        <Search className="w-8 h-8 text-heading" />
                    </div>

                    <h3
                        class="text-3xl md:text-5xl font-black text-heading mb-6 tracking-tight"
                    >
                        ¿No encuentras tu ubicación exacta?
                    </h3>
                    <p
                        class="text-xl text-text/80 mb-10 leading-relaxed text-pretty"
                    >
                        Aunque no aparezca listada específicamente, es muy
                        probable que una de nuestras unidades móviles en <strong
                            >{city}</strong
                        > pueda darte servicio en menos de 30 minutos.
                    </p>

                    <div
                        class="flex flex-col sm:flex-row items-center justify-center gap-4"
                    >
                        <a
                            href={`https://wa.me/${whatsapp.replace(/\s/g, "")}`}
                            class="w-full sm:w-auto px-8 py-4 bg-primary text-black font-bold text-base tracking-widest uppercase rounded-lg hover:bg-primary/90 transition-all shadow-xl hover:shadow-2xl hover:-translate-y-1 flex items-center justify-center gap-2 group"
                        >
                            <MessageCircle
                                className="w-5 h-5 group-hover:scale-110 transition-transform"
                            />
                            WhatsApp
                        </a>
                        <a
                            href={`tel:${phone.replace(/\s/g, "")}`}
                            class="w-full sm:w-auto px-8 py-4 bg-white/10 text-heading border border-white/20 font-bold text-base tracking-widest uppercase rounded-lg hover:bg-white/20 transition-all flex items-center justify-center gap-2 group"
                        >
                            <Phone
                                className="w-5 h-5 group-hover:scale-110 transition-transform"
                            />
                            Llamar ahora
                        </a>
                        <a
                            href="/contacto/"
                            class="w-full sm:w-auto px-8 py-4 bg-transparent text-heading border border-white/20 font-bold text-base tracking-widest uppercase rounded-lg hover:bg-white/5 transition-all flex items-center justify-center gap-2 group"
                        >
                            <Calendar
                                className="w-5 h-5 group-hover:scale-110 transition-transform"
                            />
                            Consultar Online
                        </a>
                    </div>

                    <p
                        class="mt-8 text-xs text-text/50 uppercase tracking-widest"
                    >
                        Respuesta garantizada en el día
                    </p>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</Layout>
